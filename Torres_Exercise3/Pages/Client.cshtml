@page
@model Torres_Exercise3.Pages.ClientModel
@{
}

<div class="container">
        <h1> Client Registration </h1>
        <form method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label> Name </label>
                <input class="form-control" asp-for="Client.ClientName" />
            </div>
            <div class="form-group">
                <label> Age </label>
                <input class="form-control" asp-for="Client.ClientAge" />
            </div>
            <div class="form-group">
                <label> Address </label>
                <input class="form-control" asp-for="Client.ClientAddress" />
            </div>
            <div class="form-group">
                <label> Contact Number </label>
                <input class="form-control" asp-for="Client.ClientContactNo" />
            </div>
            <div class="form-group">
                <label> Email Address </label>
                <input class="form-control" asp-for="Client.ClientEmailAdd" />
            </div>
            <div class="form-group">
                <label> Type of Subcription </label>
                <input class="form-control" asp-for="Client.ClientSubscription" />
            </div>
            <button class="btn btn-primary btn-block" type="submit">Save</button>
        </form>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Client ID</th>
            <th>Client Name</th>
            <th>Client Age</th>
            <th>Client Contact Number</th>
            <th>Client Address</th>
            <th>Client Email Address</th>
            <th>Client Type of Subscription</th>
            <th>Actions<th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model.Clients)
        {
            <tr>
                <td>@client.ClientId</td>
                <td>@client.ClientName</td>
                <td>@client.ClientAge</td>
                <td>@client.ClientContactNo</td>
                <td>@client.ClientAddress</td>
                <td>@client.ClientEmailAdd</td>
                <td>@client.ClientSubscription</td>
                <td><a asp-page="Edit" asp-route-id="@client.ClientId">Edit</a> | <a asp-page="Client" asp-page-handler="Delete" asp-route-id="@client.ClientId">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
