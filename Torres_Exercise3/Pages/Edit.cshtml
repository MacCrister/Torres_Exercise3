@page
@model Torres_Exercise3.Pages.EditModel
@{
}

<div class="container">
    <h1> Update Client Information </h1>
    <form method="post">
        <div asp-validation-summary="All"></div>
        <input type="hidden" asp-for="Client.ClientId" />
        <div class="form-group">
            <label> Name </label>
            <input class="form-control" asp-for="Client.ClientName" />
        </div>
        <div class="form-group">
            <label> Age </label>
            <input class="form-control" asp-for="Client.ClientAge" />
        </div>
        <div class="form-group">
            <label> Address </label>
            <input class="form-control" asp-for="Client.ClientAddress" />
        </div>
        <div class="form-group">
            <label> Contact Number </label>
            <input class="form-control" asp-for="Client.ClientContactNo" />
        </div>
        <div class="form-group">
            <label> Email Address </label>
            <input class="form-control" asp-for="Client.ClientEmailAdd" />
        </div>
        <div class="form-group">
            <label> Type of Subcription </label>
            <input class="form-control" asp-for="Client.ClientSubscription" />
        </div>
        <button class="btn btn-primary btn-block" type="submit">Update</button>
    </form>
</div>